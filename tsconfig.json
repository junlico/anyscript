{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "paths": {
      "/@/*": ["src/*"]
    }
  },
  "include": ["./src/**/*"],
  "exclude": ["./node_modules"]
}
